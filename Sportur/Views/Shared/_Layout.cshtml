<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Спортур</title>

    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <span class="logo">Спортур</span>

        <nav>
            <a asp-controller="Catalog" asp-action="Index">Каталог товаров</a>
            <a asp-controller="Home" asp-action="About">О компании</a>
            <a asp-controller="Home" asp-action="Info">Где купить</a>
            <a asp-controller="Home" asp-action="Service">Гарантия и сервис</a>
            <a asp-controller="Home" asp-action="Contacts">Контакты</a>
        </nav>

        <div class="auth">
            @{
                var userId = Context.Session.GetInt32("UserId");
                var userName = Context.Session.GetString("UserName");
                var role = Context.Session.GetString("UserRole");
            }

            @if (userId == null)
            {
                <a asp-controller="Account" asp-action="Login">Войти</a>
                <a asp-controller="Account" asp-action="Register">Регистрация</a>
            }
            else
            {
                <span>Привет, @userName</span>

                <a asp-controller="Order" asp-action="My">Мои заказы</a>

                @if (role == "Admin")
                {
                    <a asp-area="Admin"
                       asp-controller="AdminOrder"
                       asp-action="Index">
                        Админка
                    </a>
                }

                <a asp-controller="Account" asp-action="Logout">Выйти</a>
            }
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <small>© Спортур, @DateTime.Now.Year</small>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
