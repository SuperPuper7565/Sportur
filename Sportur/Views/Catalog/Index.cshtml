@model IEnumerable<BicycleCatalogItemViewModel>

@section Styles {
    <link rel="stylesheet" href="~/css/catalog.css" asp-append-version="true" />
}

<h2 class="mb-4">Каталог велосипедов</h2>

<div class="catalog-grid">
    @foreach (var item in Model)
    {
        <a asp-action="Details"
           asp-route-id="@item.Id"
           class="catalog-link">

            <div class="card catalog-card">

                @if (!string.IsNullOrEmpty(item.PreviewImageUrl))
                {
                    <img src="@item.PreviewImageUrl"
                         class="catalog-image"
                         alt="@item.ModelName" />
                }

                <div class="card-body">
                    <h5 class="catalog-title">
                        @item.Brand @item.ModelName
                    </h5>

                    <p class="catalog-category">@item.Category</p>

                    <p class="catalog-price">
                        от @item.MinPrice ₽
                    </p>

                    <p class="catalog-colors text-muted">
                        Цветов: @item.ColorsCount
                    </p>
                </div>
            </div>
        </a>
    }
</div>

