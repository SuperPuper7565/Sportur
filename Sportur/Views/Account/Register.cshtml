@model RegisterViewModel

<h2>Регистрация</h2>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="text-danger mb-3">
        @Html.ValidationSummary()
    </div>
}

<form asp-action="Register" method="post" autocomplete="off">

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Имя</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Surname" class="form-label">Фамилия</label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Пароль</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="RequestWholesale" class="form-check-input" />
        <label asp-for="RequestWholesale" class="form-check-label">
            Я оптовый покупатель (доступ после модерации)
        </label>
    </div>

    <button type="submit" class="btn btn-primary">
        Зарегистрироваться
    </button>
</form>

<hr />

<p>
    Уже есть аккаунт?
    <a asp-action="Login">Войти</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
