<h2>Регистрация</h2>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="text-danger">@Html.ValidationSummary()</div>
}

<form asp-action="Register" method="post">
    <div class="mb-3">
        <label>Email</label>
        <input type="email" name="email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Имя</label>
        <input type="text" name="name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Фамилия</label>
        <input type="text" name="surname" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Пароль</label>
        <input type="password" name="password" class="form-control" required />
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="requestWholesale" name="requestWholesale" value="true" />
        <label class="form-check-label" for="requestWholesale">
            Я оптовый покупатель (доступ после модерации)
        </label>
    </div>

    <button type="submit" class="btn btn-primary">
        Зарегистрироваться
    </button>
</form>

<hr />

<p>
    Уже есть аккаунт?
    <a asp-action="Login">Войти</a>
</p>
