@model IEnumerable<Sportur.Models.BicycleModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GearCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WheelDiameter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrameMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brakes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GearCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WheelDiameter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrameMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brakes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
