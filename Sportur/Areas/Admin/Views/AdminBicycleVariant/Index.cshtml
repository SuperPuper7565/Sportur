@model IEnumerable<Sportur.Models.BicycleVariant>

<h2>Варианты велосипедов</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    ➕ Добавить вариант
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Модель</th>
            <th>Цвет</th>
            <th>Размер</th>
            <th>Цена</th>
            <th>Остаток</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BicycleModel.Brand @item.BicycleModel.ModelName</td>
                <td>@item.BicycleColor.Color</td>
                <td>@item.BicycleSize.FrameSize</td>
                <td>@item.Price ₽</td>
                <td>@item.StockQuantity</td>
                <td>
                    @(item.IsAvailable ? "Доступен" : "Скрыт")
                </td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-warning">
                        Редактировать
                    </a>
                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-danger">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
