@model Sportur.Models.BicycleVariant

<h2>Удалить вариант</h2>

<div class="alert alert-warning">
    Вы уверены, что хотите удалить этот вариант?
</div>

<table class="table table-striped">
    <tr>
        <th>Модель</th>
        <td>@Model.BicycleModel.Brand @Model.BicycleModel.ModelName</td>
    </tr>
    <tr>
        <th>Цвет</th>
        <td>@Model.BicycleColor.Color</td>
    </tr>
    <tr>
        <th>Цена</th>
        <td>@Model.EffectivePrice ₽</td>
    </tr>
    <tr>
        <th>Остаток</th>
        <td>@Model.StockQuantity</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
