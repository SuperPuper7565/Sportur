@model Sportur.ViewModels.AdminBicycleVariantFormViewModel

<h2>Добавить вариант</h2>

<form asp-action="Create" method="post" data-variant-form="true">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Модель -->
    <div class="mb-3">
        <label asp-for="BicycleModelId" class="form-label"></label>
        <select asp-for="BicycleModelId"
                class="form-select"
                data-variant-model="true"
                data-options-endpoint="@Url.Action("GetModelOptions", "AdminBicycleVariant", new { area = "Admin" })">
            <option value="">-- выберите модель --</option>
            @foreach (var option in Model.Models)
            {
                <option value="@option.Id" selected="@(option.Id == Model.BicycleModelId ? "selected" : null)">
                    @option.Label
                </option>
            }
        </select>
    </div>

    <!-- Цвет -->
    <div class="mb-3">
        <label asp-for="BicycleColorId" class="form-label"></label>
        <select asp-for="BicycleColorId"
                class="form-select"
                data-variant-color="true">
            <option value="">-- выберите цвет --</option>
        </select>
    </div>

    <!-- Размер -->
    <div class="mb-3">
        <label asp-for="FrameSize" class="form-label"></label>
        <input asp-for="FrameSize" class="form-control" />
    </div>

    <!-- Цена -->
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <!-- Количество -->
    <div class="mb-3">
        <label asp-for="StockQuantity" class="form-label"></label>
        <input asp-for="StockQuantity" type="number" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsAvailable" class="form-check-input" />
        <label asp-for="IsAvailable" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Создать</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>