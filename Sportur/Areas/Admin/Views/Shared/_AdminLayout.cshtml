<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Админка</title>

    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />
</head>
<body>

    <div class="admin-wrapper">
        <aside class="admin-sidebar">
            <h3>Админка</h3>

            <a asp-area="Admin" asp-controller="AdminOrder" asp-action="Index">
                📦 Заказы
            </a>

            <a asp-area="Admin" asp-controller="AdminBicycleModel" asp-action="Index">
                🚲 Модели велосипедов
            </a>

            <a asp-area="Admin" asp-controller="AdminBicycleColor" asp-action="Index">
                🎨 Цвета велосипедов
            </a>

            <a asp-area="Admin" asp-controller="AdminBicycleSize" asp-action="Index">
                📏 Ростовки велосипедов
            </a>

            <a asp-area="Admin" asp-controller="AdminBicycleVariant" asp-action="Index">
                🎨 Варианты велосипедов
            </a>

            <hr />

            <a asp-controller="Catalog" asp-action="Index">
                ← На сайт
            </a>

            <a asp-controller="Account" asp-action="Logout">
                Выйти
            </a>
        </aside>

        <main class="admin-content">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
