<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Админка</title>

    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />

    <style>
        .admin-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .admin-sidebar {
            width: 220px;
            background: #222;
            color: #fff;
            padding: 20px;
        }

        .admin-sidebar a {
            display: block;
            color: #fff;
            margin-bottom: 10px;
            text-decoration: none;
        }

        .admin-content {
            flex: 1;
            padding: 20px;
        }
    </style>
</head>
<body>

    <div class="admin-wrapper">
        <aside class="admin-sidebar">
            <h3>Админка</h3>

            <a asp-area="Admin" asp-controller="AdminOrder" asp-action="Index">
                📦 Заказы
            </a>

            <a asp-area="Admin" asp-controller="AdminBicycle" asp-action="Index">
                🚲 Велосипеды
            </a>

            <hr />

            <a asp-controller="Catalog" asp-action="Index">
                ← На сайт
            </a>

            <a asp-controller="Account" asp-action="Logout">
                Выйти
            </a>
        </aside>

        <main class="admin-content">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
