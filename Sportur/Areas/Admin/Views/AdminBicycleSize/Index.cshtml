@model IEnumerable<Sportur.Models.BicycleSize>

<h2>Размеры велосипедов</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    ➕ Добавить размер
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Модель</th>
            <th>Размер</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BicycleModel.Brand @item.BicycleModel.ModelName</td>
                <td>@item.FrameSize</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-warning">
                        Редактировать
                    </a>
                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-danger">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
