@model Sportur.ViewModels.AdminBicycleColorFormViewModel

<h2>Добавить цвет</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="BicycleModelId" class="form-label"></label>
        <select asp-for="BicycleModelId" class="form-select">
            <option value="">-- выберите модель --</option>
            @foreach (var option in Model.Models)
            {
                <option value="@option.Id" selected="@(option.Id == Model.BicycleModelId ? "selected" : null)">
                    @option.Label
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Color" class="form-label"></label>
        <input asp-for="Color" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PhotoFile" class="form-label">Фото (файл)</label>
        <input asp-for="PhotoFile" type="file" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
    {
        <div class="mb-3">
            <label>Текущее фото:</label><br />
            <img src="@Model.PhotoUrl" alt="Фото цвета" style="max-width:200px;" />
        </div>
    }

    <button type="submit" class="btn @(ViewContext.RouteData.Values["action"].ToString() == "Edit" ? "btn-warning" : "btn-success")">
        @(ViewContext.RouteData.Values["action"].ToString() == "Edit" ? "Сохранить" : "Создать")
    </button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

