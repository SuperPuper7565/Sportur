@model IEnumerable<Sportur.Models.BicycleColor>

<h2>Цвета велосипедов</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    ➕ Добавить цвет
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Модель</th>
            <th>Цвет</th>
            <th>Фото</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BicycleModel.Brand @item.BicycleModel.ModelName</td>
                <td>@item.Color</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.PhotoUrl))
                    {
                        <a href="@item.PhotoUrl" target="_blank">Открыть</a>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-warning">
                        Редактировать
                    </a>
                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-danger">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
