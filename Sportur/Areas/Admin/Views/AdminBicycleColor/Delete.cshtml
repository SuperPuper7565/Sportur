@model Sportur.Models.BicycleColor

<h2>Удалить цвет</h2>

<div class="alert alert-warning">
    Вы уверены, что хотите удалить этот цвет?
</div>

<table class="table table-striped">
    <tr>
        <th>Модель</th>
        <td>@Model.BicycleModel.Brand @Model.BicycleModel.ModelName</td>
    </tr>
    <tr>
        <th>Цвет</th>
        <td>@Model.Color</td>
    </tr>
    <tr>
        <th>Фото</th>
        <td>
            @if (!string.IsNullOrWhiteSpace(Model.PhotoUrl))
            {
                <a href="@Model.PhotoUrl" target="_blank">Открыть</a>
            }
            else
            {
                <span class="text-muted">—</span>
            }
        </td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
