@model List<Sportur.Models.Order>

<h2>Список заказов</h2>

<a asp-action="ExportCsv" class="btn btn-success mb-3">Экспорт в CSV</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Дата</th>
            <th>Пользователь</th>
            <th>Количество позиций</th>
            <th>Сумма</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(order.User?.Email ?? "Guest")</td>
                <td>@order.Items.Count</td>
                <td>@order.Items.Sum(i => i.Quantity * i.BicycleVariant.Price) ₽</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">
                        Подробнее
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
